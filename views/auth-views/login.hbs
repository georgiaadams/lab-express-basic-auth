<form action="/auth/login" method="POST">
<h2>LOGIN</h2>

<label for="">Username</label>
<input type="text" name="username">

<br>

<label for="">Password</label>
<input type="password" name="password">

<br>

<button type="submit">Login to account</button>

</form>

